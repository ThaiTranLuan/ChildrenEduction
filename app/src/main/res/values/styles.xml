<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="commonTheme" parent="AppTheme">

    </style>

    <style name="commonTheme.Day" parent="commonTheme">
        <item name="custom_attr_app_bg">@color/custom_color_app_bg_day</item>
        <item name="custom_attr_app_title_layout_bg">@color/custom_color_app_title_layout_bg_day</item>
    </style>

    <style name="commonTheme.Night" parent="commonTheme">
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="custom_attr_app_bg">@color/custom_color_app_bg_night</item>
        <item name="custom_attr_app_title_layout_bg">@color/custom_color_app_title_layout_bg_night</item>
    </style>



    <!--首页-->

    <!--底部字体样式-->
    <style name="style_home_activity_text">
        <item name="android:textSize">@dimen/dime_text_title_size</item>
        <item name="android:textColor">@color/color_text_blank_800</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--条目 title-->
    <style name="commen_text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimen_text_content_size</item>
        <item name="android:textColor">@color/color_text_blank_800</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--meFragment条目-->
    <style name="style_item_mefragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/dimen_text_content_size</item>
        <item name="android:textColor">@color/color_text_blank_800</item>
    </style>


</resources>
