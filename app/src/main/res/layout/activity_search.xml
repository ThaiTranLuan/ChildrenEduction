<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:background="@color/color_text_blank_100"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:paddingLeft="0dp">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/shape_search"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/search"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/tv_activity_label"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:textColor="@color/color_text_blank_600"
                android:hint="搜索"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="@dimen/dime_text_title_size"
                android:layout_weight="1"
                android:background="@null"
                />
            <TextView
                android:id="@+id/tv_act_search_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/delete"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/rel_act_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_act_search_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_act_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>
</LinearLayout>