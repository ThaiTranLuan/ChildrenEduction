<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:background="#FFFF"
                                    android:orientation="vertical"
                                    app:cardCornerRadius="@dimen/dimesns_corner"
                                    app:cardUseCompatPadding="true"
                                    app:cardPreventCornerOverlap="false"
                                    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_ada_home_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/med"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_adapter_home_user"
                style="@style/commen_text_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="生命练习"/>

            <TextView
                android:id="@+id/tv_adapter_home_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:text="2017-08-09"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_adapter_home_tile"
            style="@style/commen_text_title"
            android:layout_below="@+id/user_info"
            android:layout_marginTop="10dp"
            android:text="关于教育孩子的几点心得"
            />

        <TextView
            android:id="@+id/tv_adapter_home_content"
            style="@style/commen_text_title"
            android:layout_below="@id/tv_adapter_home_tile"
            android:layout_marginTop="5dp"
            android:text="关于教育孩子的几点心得"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end">
                <TextView
                    android:id="@+id/tv_ada_home_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="标签"
                    android:layout_marginRight="10dp"
                    />

                <ImageView
                    android:id="@+id/img_adapter_home_coll"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/coll"
                    />

                <ImageView
                    android:id="@+id/img_adapter_home_share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/share"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>