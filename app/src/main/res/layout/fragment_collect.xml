<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_text_blank_100"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="收藏中心"
        android:textColor="@color/color_text_blank_800"
        android:textSize="@dimen/dime_text_title_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_frag_coll_art"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="文章"
            android:textColor="@color/color_text_blank_700"
            android:textSize="@dimen/dime_text_title_size"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/color_text_blank_600"/>

        <TextView
            android:id="@+id/tv_frag_coll_video"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/color_text_blank_700"
            android:textSize="@dimen/dime_text_title_size"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fram_fram_coll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>