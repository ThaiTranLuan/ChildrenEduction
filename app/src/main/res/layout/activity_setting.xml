<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_text_blank_100"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_text_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_activity_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="系统设置"
                android:textColor="@color/color_text_blank_600"
                android:textSize="@dimen/dime_text_title_size"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/color_text_white">

        <TextView
            android:id="@+id/tv_frag_me_cache"
            style="@style/style_item_mefragment"
            android:paddingLeft="5dp"
            android:text="清除缓存"
            />
        <TextView
            android:id="@+id/tv_frag_me_size"
            style="@style/style_item_mefragment"
            android:paddingLeft="5dp"
            android:text="50M"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_toolbar_background_red"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_text_white"
        >

        <TextView
            android:id="@+id/tv_frag_me_login"
            style="@style/style_item_mefragment"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/color_toolbar_background_red"
            />
    </RelativeLayout>

</LinearLayout>